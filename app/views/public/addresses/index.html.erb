<h2>配送先登録/一覧</h2>

<%= form_with model: @address, url: addresses_path(@address.id), method: :post do |f| %>
  <table>
    <tbody>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name %></td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "新規登録" %>
<% end%>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id) %></td>
      <td><%= link_to "削除する", address_path(address.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>