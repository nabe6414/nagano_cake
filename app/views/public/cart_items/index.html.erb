<div class="container">
  <% if @cart_items.count == 0 %>
    <div class="row d-flex justify-content-between my-4">
      <h2><span class="bg-light">ショッピングカート</span></h2>
    </div>
    <h2 class="text-center">No item</h2>
    <div class="row d-flex justify-content-between">
      <div class="actions text-center col-4"><%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %></div>
      <div class="col-3">
        <table class="table table-bordered">
          <tr>
            <tbody>
              <td class="bg-light"><strong>合計金額</strong></td>
              <td><%= @total.to_s(:delimited) %></td>
            </tbody>
          </tr>
        </table>
      </div>
    </div>
  <% else %>
    <div class="row d-flex justify-content-between my-4">
      <h2><span class="bg-light">ショッピングカート</span></h2>
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "本当に空にしますか？", class: "btn btn-danger" %>
    </div>

    <div class="row">
      <div class="col-12">
        <table class="table table-bordered">
          <thead class="bg-light">
            <tr>
              <th class="col-4">商品名</th>
              <th class="col-2">単価(税込)</th>
              <th class="col-2">数量</th>
              <th class="col-2">小計</th>
              <th class="col-2"></th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= link_to item_path(cart_item.item_id) do %>
                  <%= image_tag cart_item.item.get_image(50,50), class: "mr-3" %><%= cart_item.item.name %>
                <% end %>
              </td>
              <td class="align-middle"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td class="align-middle actions text-center">
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                <div class="d-flex flex-row">
                  <%= f.select :amount, *[1..10], {}, class: "form-control mr-3" %>
                  <%= f.submit "変更する", class: "btn btn-success" %>
                </div>
                <% end %>
              </td>
              <td class="align-middle"><%= cart_item.sub_total.to_s(:delimited) %></td>
              <td class="align-middle actions text-center"><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
            </tr>
              <% @total += cart_item.sub_total %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row d-flex justify-content-between">
      <div class="actions text-center col-4"><%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %></div>
      <div class="col-3">
        <table class="table table-bordered">
          <tr>
            <tbody>
              <td class="bg-light"><strong>合計金額</strong></td>
              <td><%= @total.to_s(:delimited) %></td>
            </tbody>
          </tr>
        </table>
      </div>
    </div>

    <div class="row d-flex justify-content-center">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>