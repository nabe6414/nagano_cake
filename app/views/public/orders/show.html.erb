<div class="container">
  <h2 class="my-4"><span class="bg-light">注文詳細</span></h2>

  <div class="row">
    <div class="col-8">
      <p>注文情報</p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="bg-light">注文日</td>
            <td><%= @order.created_at.to_date.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td class="bg-light">配送先</td>
            <td>
              〒<%= @order.postal_code %>
              <%= @order.address %>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td class="bg-light">支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td class="bg-light">ステータス</td>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <p>請求情報</p>
      <% @order.order_datails.each do |order_datail| %>
        <% ((order_datail.unit_price * 1.1) * order_datail.amount).floor %>
        <% @item_total += ((order_datail.unit_price * 1.1) * order_datail.amount).floor %>
      <% end %>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="bg-light">商品合計</td>
            <td><%= @item_total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td class="bg-light">配送料</td>
            <td><%= @order.postage.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td class="bg-light">ご請求額</td>
            <td><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-10">
      <p>注文内容</p>
      <table class="table table-bordered">
        <thead  class="bg-light">
          <tr>
            <th class="col-8">商品</th>
            <th class="col-2">単価（税込）</th>
            <th class="col-1">個数</th>
            <th class="col-1">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_datails.each do |order_datail| %>
          <tr>
            <td><%= order_datail.item.name %></td>
            <td><%= (order_datail.unit_price * 1.1).floor %></td>
            <td><%= order_datail.amount %></td>
            <td><%= ((order_datail.unit_price * 1.1) * order_datail.amount).floor.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>