<h2>注文詳細</h2>

<p>注文情報</p>
<table>
  <tbody>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.to_s(:datetime_ja) %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>
        〒<%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td><%= @order.status_i18n %></td>
    </tr>
  </tbody>
</table>

<p>請求情報</p>
<% @order.order_datails.each do |order_datail| %>
  <% ((order_datail.unit_price * 1.1) * order_datail.amount).floor %>
  <% @item_total += ((order_datail.unit_price * 1.1) * order_datail.amount).floor %>
<% end %>
<table>
  <tbody>
    <tr>
      <td>商品合計</td>
      <td><%= @item_total %></td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= @order.total_payment %></td>
    </tr>
  </tbody>
</table>

<p>注文内容</p>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_datails.each do |order_datail| %>
    <tr>
      <td><%= order_datail.item.name %></td>
      <td><%= (order_datail.unit_price * 1.1).floor %></td>
      <td><%= order_datail.amount %></td>
      <td><%= ((order_datail.unit_price * 1.1) * order_datail.amount).floor %></td>
    </tr>
    <% end %>
  </tbody>
</table>