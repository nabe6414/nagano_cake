<h2>注文情確認<h2>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item|%>
    <tr>
      <td><%= image_tag cart_item.item.image %><%= cart_item.item.name %></td>
      <td><%= (cart_item.item.price * 1.1).round(0).to_s(:delimited) %></td>
      <td><%= cart_item.amount %></td>
      <td><%= (cart_item.item.price * cart_item.amount * 1.1).round(0).to_s(:delimited) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p>支払方法</p>
