<div class="container">
  <h2 class="my-4"><span class="bg-light">注文履歴一覧</span></h2>

  <div class="row">
    <div class="col-12">
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>注文日</th>
            <th class="col-4">配送先</th>
            <th>注文履歴</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td class="align-middle"><%= order.created_at.to_date.strftime('%Y/%m/%d') %></td>
            <td class="align-middle">
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td class="align-middle">
              <% order.order_datails.each do |order_datail| %>
                <%= order_datail.item.name %><br>
              <% end %>
            </td>
            <td class="align-middle"><%= order.total_payment.to_s(:delimited) %>円</td>
            <td class="align-middle"><%= order.status_i18n %></td>
            <td class="align-middle actions text-center"><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>