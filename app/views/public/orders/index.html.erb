<h2>注文履歴一覧</h2>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文履歴</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.to_s(:datetime_ja) %></td>
      <td>
        〒<%= order.postal_code %><br>
        <%= order.address %><br>
        <%= order.name %>
      </td>
      <td>
        <% order.order_datails.each do |order_datail| %>
          <%= order_datail.item.name %><br>
        <% end %>
      </td>
      <td><%= order.total_payment %></td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to "表示する", order_path(order.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>