<div class="container">
  <h3 class="text-success"><%= flash[:update_customer] %></h3>
</div>

<div class="container">
  <h2 class="my-4"><span class="bg-light">マイページ</span></h2>

  <div class="row">
    <div class="col-4">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><strong>登録情報</strong></td>
            <td><%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success" %></td>
          </tr>
        </tbldy>
      </table>
    </div>

    <div class="col-12">
      <table>
        <thead>
          <tr>
            <th class="col-4"></th>
            <th class="col-8"></th>
          </tr>
        </thead>
        <tbody class="table table-bordered">
          <tr>
            <td class="bg-light">氏名</td>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <td class="bg-light">カナ</td>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td class="bg-light">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="bg-light">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="bg-light">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="bg-light">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><strong>配送先</strong></td>
            <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></td>
          </tr>
          <tr>
            <td><strong>注文履歴</strong></td>
            <td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></td>
          </tr>
        </tbldy>
      </table>
    </div>
  </div>
</div>