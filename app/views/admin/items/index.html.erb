<div class="container">
  <h3 class="text-success"><%= flash[:new_item] %></h3>
  <h3 class="text-success"><%= flash[:update_item] %></h3>
</div>

<div class="container">
  <div class="row my-4">
    <h2 class="col-11"><span class="bg-light">商品一覧</span></h2>
    <h2 class="col-1">
      <%= link_to new_admin_item_path do %>
        <span class="fa-stack">
          <i class="fas fa-circle fa-stack-1x" style="color: #ffffff; filter: drop-shadow(3px 3px 1px #bbb);"></i>
          <i class="fas fa-plus fa-stack-1x" style="color: #a9a9a9;"></i>
        </span>
      <% end %>
    </h2>

    <table class="table col-12 mt-4">
      <thead class="table-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active == true %>
              <span class="text-success"><%= item.is_active ? '販売中' : '販売停止中' %>
            <% else %>
              <span class="text-secondary"><%= item.is_active ? '販売中' : '販売停止中' %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>