<div class="container">
  <div class="row my-4">
    <h2 class="col-11"><span class="bg-light">商品一覧</span></h2>
    <h2 class="col-1">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus-circle" style="color: #b8bdc7;"></i>
      <% end %>
    </h2>

    <table class="table col-12 mt-4">
      <thead class="table-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
            <% end %>
            </td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>