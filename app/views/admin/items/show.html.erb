<div class="container">
  <h2 class="my-4"><span class="bg-light">商品詳細</h2>

  <div class="row">
    <div class="col-3"><%= image_tag @item.get_image(200,200) %></div>
    <div class="col-9">
      <table class="table table-borderless">
        <thead>
          <th class="col-2"></th>
          <th class="col-10"></th>
        </thead>
        <tbody>
          <tr>
            <td>商品名</td>
            <td>
              <%= @item.name %>
            </td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td>
              <%= @item.introduction %>
            </td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td>
              <%= @item.genre.name %>
              </td>
          </tr>
          <tr>
            <td>税込価格<br>(税込価格)</td>
            <td>
              <%= @item.price.to_s(:delimited) %><span>（<%= @item.with_tax_price.to_s(:delimited) %>）円</span>
              </td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active == true %>
                <span class="text-success"><%= @item.is_active ? '販売中' : '販売停止中' %></span>
              <% else %>
                <span class="text-danger"><%= @item.is_active ? '販売中' : '販売停止中' %></span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
  </div>
</div>