<div class="container">
<% if @item.errors.any? %>
  <h3 class="text-danger"><%= @item.errors.count %>件のエラーが発生しました</h3>
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<div class="container">
  <h2 class="my-4"><span class="bg-light">商品編集</h2>

  <div class="row">
    <div class="col-6 mx-auto">
    <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction, class: "form-control" %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "--選択してください--"}, class: "form-control" %></td>
          </tr>
          <tr>
            <td>税抜価格</td>
            <td><%= f.text_field :price, class: "form-control" %></td>
            <td>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "販売停止中" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
  <% end %>
</div>