<div class="container">
  <h2 class="my-4"><span class="bg-light">会員一覧</span></h2>

  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_delete == true %>
                <span class="text-secondary"><%= customer.is_delete ? '退会' : '有効' %></span>
              <% else %>
                <span class="text-success"><%= customer.is_delete ? '退会' : '有効' %></span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>