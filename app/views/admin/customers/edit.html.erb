<div class="container">
  <h2 class="my-4"><span class="bg-light"><%= @customer.last_name%><%= @customer.first_name %>さんの会員詳細</span></h2>
    <div class="row">
      <div class="col-8">
        <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <table class="table table-borderless">
          <theade></theade>
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name, class: "form-control" %></td>
              <td><%= f.text_field :first_name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
              <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code, class: "form-control" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan="3"><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number, class: "form-control" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_delete, false %>
                <%= f.label :is_delete, "有効", class:"mr-3" %>
                <%= f.radio_button :is_delete, true %>
                <%= f.label :is_delete, "退会" %>
              </td>
            </tr>
          </tbody>
        </table>
          <div class="actions text-center col-8"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
        <% end %>
    </div>
  </div>
</div>