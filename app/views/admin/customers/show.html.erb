<div class="container">
  <h3 class="text-success">
    <%= flash[:update_admin_customer] %>
  </h3>
</div>

<div class="container">
  <h2 class="my-4"><span class="bg-light"><%= @customer.last_name%><%= @customer.first_name %>さんの会員詳細</span></h2>

  <div class="row">
    <div class="col-10">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th class="col-2"></th>
            <th class="col-10"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <% if @customer.is_delete == true %>
                <span class="text-secondary"><%= @customer.is_delete ? '退会' : '有効' %></span>
              <% else %>
                <span class="text-success"><%= @customer.is_delete ? '退会' : '有効' %></span>
              <% end %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success mr-5" %>
              <%= link_to "注文履歴一覧を見る", admin_customer_path(@customer.id), class: "btn btn-primary ml-5" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>