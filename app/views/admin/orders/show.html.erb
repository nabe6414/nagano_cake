<h2>注文履歴詳細</h2>

<table>
  <tbody>
    <tr>
      <td>購入者</td>
      <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <% form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
      <td>注文ステータス</td>
      <td><%= f.select :status, Orders.status.keys.to_a, {} %><%= f.submit "更新" %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_datail.each do |order_datail| %>
    <tr>
      <td><%= order_datail.item.name %></td>
      <td><%= order_datail.unit_price %></td>
      <td><%= order_datail.amount %></td>
      <td><%= (order_datail.unit_price * order_datail.amount * 1.1).round(0).to_s(:delimited) %></td>
      <td><%= order_datail.making_status %></td>
      <td><></td>
    </tr>
    <% @total = @total + (order_datail.unit_price * order_datail.amount * 1.1).round(0).to_s(:delimited) %>
    <% end %>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <td>商品合計</td>
      <td><%= @total %></td>
    </tr>
    <tr>
      <td>送料</td>
      <td><%= order.postage %></td>
    </tr>
    <tr>
      <td>請求金額合計</td>
      <td><%= order.total_payment %></td>
    </tr>
  </tbody>
</table>